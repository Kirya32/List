<Window x:Class="WpfApp4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="Генератор бедолаг" Height="450" Width="300">
    <Grid>
        <StackPanel Margin="15">
            <ListBox Name="StudentList">
                <ListBoxItem>Первый дежурный</ListBoxItem>
    <ListBoxItem>Второй дежурный</ListBoxItem>
    <ListBoxItem>Третий дежурный</ListBoxItem>
</ListBox>
        <StackPanel Orientation="Horizontal" Margin="0 5 0 0 ">
            <Button Click="BtnGeneration_OnClick" Name="BtnGeneration" Padding="5" Background="Black" Foreground="White">Сгенерировать</Button>
            <Button Click="BtnClear_OnClick" Name="BtnClear" Padding="5" Background="Orange">Очистить список</Button>
        </StackPanel>
        </StackPanel>
    </Grid>
</Window>
